{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "Create a simple blockchain to learn and test some concepts with javascript",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --opts ./tests/mocha.opts './tests/**/*.spec.js'",
    "test:watch": "./node_modules/.bin/mocha -w --opts ./tests/mocha.opts './tests/**/*.spec.js'",
    "start": "node index.js",
    "dev": "./node_modules/.bin/nodemon index.js",
    "build:doc": "./node_modules/.bin/jsdoc core/index.js -t assets/template/minami",
    "serve:doc": "./node_modules/.bin/serve out/",
    "doc": "npm run build:doc && npm run serve:doc"
  },
  "keywords": [
    "blockchain",
    "javascript",
    "js",
    "blockchain-technology"
  ],
  "author": "ugo.arzur@gmail.com",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "signale": "^1.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "serve": "^10.0.2"
  }
}
